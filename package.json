{
  "name": "vscode-cmplint",
  "version": "0.1.3",
  "displayName": "vscode-cmplint",
  "description": "Visual Studio Code plugin for cmplint. Based on vscode-stylelint.",
  "publisher": "acceptableice",
  "repository": "https://github.com/acceptableice/vscode-cmplint",
  "homepage": "https://github.com/acceptableice/vscode-cmplint#readme",
  "bugs": "https://github.com/acceptableice/vscode-cmplint/issues",
  "license": "MIT",
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#32CD32",
    "theme": "light"
  },
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "lint",
    "aura",
    "cmp",
    "cmplint",
    "check"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "index.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "cmplint configuration options",
      "properties": {
        "cmplint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Control whether cmplint is enabled for Aura files or not."
        },
        "cmplint.config": {
          "type": [
            "object",
            "null"
          ],
          "default": null,
          "description": "A cmplint configuration object."
        }
      }
    },
    "languages": [
      {
        "id": "component",
        "aliases": ["aura-component"],
        "extensions": [".cmp"]
      }
    ]
  },
  "scripts": {
    "test": "cmplint --fix --format=codeframe index.js server.js",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode-cmplint-server": "git@github.com:AcceptableIce/vscode-cmplint-server.git",
    "vscode": "^1.1.0",
    "vscode-languageclient": "^3.2.0",
    "vscode-languageserver": "^3.2.0"
  }
}
